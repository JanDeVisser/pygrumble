{
    "author": "Jan de Visser",
    "version": "1.0",
    "app_id": "grumble",
    "about": {
        "version": "1.0",
        "copyright": "(c) 2012-2013 finiandarcy.com",
        "contact": "info@finiandarcy.com",
        "contacturl": "http://www,finiandarcy.com",
        "application_name": "Grumble test app",
        "application_url": "http://localhost:8080/"
    },
    "icon": "/ceilingcat.jpg",
    "container": {
        "pipeline": [ "grit.RequestLogger", "grit.TxWrapper", "grit.Session", "grit.Auth" ]
    },
    "roles": [
        { "role": "athlete",   "has_roles": []              },
        { "role": "coach",     "has_roles": []              },
        { "role": "user",      "has_roles": []              },
        { "role": "moderator", "has_roles": [ "user" ]      },
        { "role": "admin",     "has_roles": [ "moderator" ] }
    ],
    "mounts": [
        { "path": "/", "app": "index.app", "roles": [] },
        { "path": "/image/.+|/css/.+|/javascript/.+", "roles": [] },
        { "path": "/json/.+|/img/.+", "app": "grit.handlers.app", "roles": [ "admin" ]}
    ],
    "components": [ "grizzle" ]
}
