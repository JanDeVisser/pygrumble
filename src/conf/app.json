{
    "author": "Jan de Visser",
    "version": "1.0",
    "app_id": "grumble",
    "about": {
        "version": "1.0",
        "copyright": "(c) 2012-2013 finiandarcy.com",
        "contact": "info@finiandarcy.com",
        "contacturl": "http://www,finiandarcy.com",
        "application_name": "Grumble test app",
        "application_url": "http://localhost:8080/"
    },
    "icon": "/ceilingcat.jpg",
    "container": {
        "pipeline": [ "grit.RequestLogger", "grit.TxWrapper", "grit.Session", "grit.Auth" ]
    },
    "logout": { "redirect": "/" },
    "roles": [
        { 
        	"role": "athlete",
        	"label": "Athlete",
        	"has_roles": []              
    	},
        {
        	"role": "coach",
        	"label": "Coach",
        	"has_roles": []
    	},
        { 
        	"role": "user",
        	"label": "SweatTrails Member",
        	"urls": [ { "id": "logout", "label": "Logout", "url": "/logout", "level": 99 } ],
        	"has_roles": []             
    	},
        {
        	"role": "moderator", 
        	"label": "Moderator",
        	"has_roles": [ "user" ]      
    	},
        { 
        	"role": "admin",     
        	"label": "Administrator",
        	"urls": [ { "id": "usermgmt", "label": "User Management", "url": "/users", "level": 10 } ],
        	"has_roles": [ "moderator" ] 
    	}
    ],
    "mounts": [
        { "path": "/", "app": "index.app", "roles": [] },
        { "path": "/image/.+|/css/.+|/javascript/.+", "roles": [] },
        { "path": "/json/.+|/img/.+", "app": "grit.handlers.app", "roles": [ "admin" ]}
    ],
    "components": [ "grizzle" ]
}
