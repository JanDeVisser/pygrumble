    },
    "config": {
        "google_api_key": "AIzaSyAGBJnvM6-HY8S_-5miEUR-uKetPVOYMRU",
        "application_url": "http://localhost/"
    },
    "icon": "/ceilingcat.jpg",
    "container": {
        "pipeline": [ "grit.pipeline.RequestLogger", "grit.pipeline.TxWrapper", "grit.Session", "grit.pipeline.Auth" ]
    },
    "logout": { "redirect": "/" },
    "roles": {
        "user": { 
        	"label": "SweatTrails Member",
        	"urls": [ { "id": "logout", "label": "Logout", "url": "/logout", "level": 99 } ],
        	"has_roles": []             
    	},
        "moderator": {
        	"label": "Moderator",
        	"has_roles": [ "user" ]      
    	},
        "admin": { 
        	"label": "Administrator",
        	"urls": [ { "id": "usermgmt", "label": "User Management", "url": "/users", "level": 10 } ],
        	"has_roles": [ "moderator" ] 
    	}
    },
    "workflows": {
        "signup": "grit.usermgmt.UserSignup",
        "usercreate": "grit.usermgmt.UserCreate",
        "pwdreset": "grit.usermgmt.PasswordReset"
    },
    "mounts": [
        { "path": "/", "app": "index.app", "roles": [] },
        { "path": "/login|/logout|/um/.+", "app": "grit.usermgmt.app", "roles": [] },
        { "path": "/image/.+|/css/.+|/jscr/.+", "roles": [] },
        { "path": "/json/.+|/img/.+", "app": "grit.handlers.app", "roles": ["user"]},
        { "path": "/schema/.+", "app": "grit.handlers.app", "roles": ["user"]},
        { "path": "/test/.+", "roles": [] }
    ],
    "components": [ "grizzle", "sweattrails" ]
}
