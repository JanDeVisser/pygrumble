        "contacturl": "http://www,finiandarcy.com",
        "application_name": "Grumble test app",
        "application_url": "http://localhost:8080/"
    },
    "container": {
        "pipeline": [ "grit.RequestLogger", "grit.TxWrapper", "grit.Session", "grit.Auth" ]
    },
    "mounts": [
        { "path": "/", "app": "index.app", "roles": [ "admin" ] },
        { "path": "/image/.+|/conf/.+|/grit/template/.+", "roles": [] },
        { "path": "/json/.+|/img/.+", "app": "grit.handlers.app", "roles": [ "admin" ]},
        { "path": "/users/?|/users/.+", "app": "gristle.app", "roles": [ "admin" ]}
    ]
}
