{
    "author": "Jan de Visser",
    "version": "1.0",
    "usermanager": "grizzle.UserManager",
    "mounts": [
        { "path": "/users/?|/users/.+", "app": "grizzle.app", "roles": [ "admin" ]}
    ],
    "grizzle": {
        "userparts": [
            { "part": "sweattrails.userprofile.UserProfile", "default": true, "configurable": false },
            { "part": "sweattrails.config.ActivityProfile", "default": true, "configurable": false },
            { "part": "sweattrails.userprofile.WeightMgmt", "default": true, "configurable": true },
            { "part": "sweattrails.userprofile.SeizureMgmt", "default": true, "configurable": true }
        ],
        "root": "root@sweattrails.com"
    },
    "sweattrails": {
        "activityprofileparts": {
            "sessionType": { 
                "nodeClass": "sweattrails.config.SessionTypeNode", 
                "refClass": "sweattrails.config.SessionType"
            },
            "gearType": { 
                "nodeClass": "sweattrails.config.GearTypeNode", 
                "refClass": "sweattrails.config.GearType"
            },
            "criticalPowerInterval": { 
                "nodeClass": "sweattrails.config.CriticalPowerIntervalNode", 
                "refClass": "sweattrails.config.CriticalPowerInterval"
            }
        }        
    }
}
